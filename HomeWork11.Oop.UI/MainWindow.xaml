<Window x:Class="Homework11.Oop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework11.Oop.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Сотрудник">
                <MenuItem Header="Переключиться на консультанта" ></MenuItem>
                <MenuItem Header="Переключиться на менеджера" ></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar Name="sbar" VerticalAlignment="Bottom" Background="Beige">
            <StatusBarItem>
                <TextBlock Name ="Employee_TextBlock" Text="{Binding Employee}"></TextBlock>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
